{{#each appointments }}

    <tr>
        <td>{{increment @index }}</td>
        <td>{{ this.name }}</td>
        <td>{{ this.email }}</td>
        <td>{{ this.phone }}</td>
        <td>{{ this.date }}</td>
        <td>{{ this.time }}</td>
        <td>
            <a href="appointment_edit.html?id={{ this._id }}" class="btn btn-primary"><i
                    class="fa fa-pencil fa-lg"
                    aria-hidden="true"></i>Edit</a>
            <a href="javascript:void(0);" data-id="{{this._id}}" class="btn btn-danger"
               onclick="return confirm('Are you sure to delete this record ?');"><i
                    class="fa fa-trash fa-lg" aria-hidden="true"></i>Delete</a>
        </td>
    </tr>
{{/each}}
